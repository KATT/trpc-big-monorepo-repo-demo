{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "//#root:codegen": {
      "cache": true,
      "persistent": false,
      "inputs": ["./scripts/**/*"],
      "outputs": ["packages/api/src/routers/**"]
    },
    "build": {
      "dependsOn": ["^build", "//#root:codegen"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "tsconfig.tsbuildinfo"
      ],
      "persistent": false,
      "cache": true
    }
  }
}
